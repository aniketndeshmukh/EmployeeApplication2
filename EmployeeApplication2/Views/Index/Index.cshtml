@model EmployeeApplication2.Models.Employee

@{
    ViewBag.Title = "Employee Search";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Search Employee</h2>

        <div class="input-group mt-3">
            <input type="text" id="searchEmpId" class="form-control" placeholder="Enter Employee ID">
            <button id="searchButton" class="btn btn-primary">Search</button>
        </div>

        <div id="loadingSpinner" class="text-center mt-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div id="employeeDetails" class="mt-4"></div>

        <div class="mt-5" >
            <h5>Filter History by Code</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group" style="width:120px">
                        <select id="historyCodeFilter"  class="form-control">
                            <option value="">All Codes</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>


        <div id="historyCodeValue" class="mt-4"></div>

        <div class="mt-3>
            <h4 class="text-center">Add Code & Value</h4>
            <div class="row">
                <div class="col-md-3">
                    <select id="codeDropdown" class="form-control"><option>Select Code</option></select>
                </div>
                <div class="col-md-3">
                    <input type="text" id="codeValue" class="form-control" placeholder="Enter Value">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-success" id="saveCodeValue">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery & Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    #historyCodeFilter {
        
        background-image: url('https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/funnel.svg'); /* Bootstrap filter icon */
        background-position: right 10px center;
        background-repeat: no-repeat;
        background-size: 16px;
        padding-right: 30px; /* Space for icon */
       
    }
</style>
<script>
$(document).ready(function () {
    function loadEmployeeCodes(empId) {
        $.get('@Url.Action("GetEmployeeCodes", "Index")', { empId: empId }, function (response) {
            var dropdowns = $("#codeDropdown, #historyCodeFilter");
            dropdowns.empty().append('<option value="">Select Code</option>');
            $.each(response, function (index, value) {
                dropdowns.append('<option value="' + value + '">' + value + '</option>');
            });
        });
    }

    function loadHistoryCodeValues(empId, code = "") {
        debugger;
        $.get('@Url.Action("GetHistoryCodeValues", "Index")', { empId: empId, code: code }, function (response) {
            $("#historyCodeValue").html(response).show();
        });
    }

    function searchEmployee() {
        var empId = $("#searchEmpId").val().trim();
        if (!empId) {
            $("#employeeDetails, #historyCodeValue").hide();
            return;
        }

        $("#loadingSpinner").show();
        $("#employeeDetails, #historyCodeValue").hide();

        $.get('@Url.Action("SearchEmployee", "Index")', { empId: empId }, function (response) {
            debugger;
            $("#loadingSpinner").hide();
            $("#employeeDetails").html(response).show();
            loadEmployeeCodes(empId);
            loadHistoryCodeValues(empId);
        });
    }

    $("#searchButton").click(searchEmployee);

    $("#searchEmpId").on("input", function () {
        clearTimeout(this.delay);
        this.delay = setTimeout(searchEmployee, 500);
    });

    $("#historyCodeFilter").change(function () {
        var empId = $("#searchEmpId").val().trim();
        var selectedCode = $("#historyCodeFilter").val();
        loadHistoryCodeValues(empId, selectedCode);
    });

    $("#codeDropdown").change(function () {
        var empId = $("#searchEmpId").val().trim();
        var selectedCode = $(this).val();
        if (empId && selectedCode) {
            $.get('@Url.Action("GetValueForCode", "Index")', { empId: empId, code: selectedCode }, function (response) {
                $("#codeValue").val(response);
            });
        } else {
            $("#codeValue").val("");
        }
    });

    $("#saveCodeValue").click(function () {
        var empId = $("#searchEmpId").val().trim();
        var code = $("#codeDropdown").val();
        var value = $("#codeValue").val().trim();
        if (!empId || !code || !value) {
            alert("Please fill in all fields.");
            return;
        }
        $.post('@Url.Action("SaveCodeValue", "Index")', { empId: empId, code: code, value: value }, function (response) {
            alert(response.message);
            loadHistoryCodeValues(empId, $("#historyCodeFilter").val());
        });
    });
});
</script>
