@model List<EmployeeApplication2.Models.HistoryCodeValue>

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-3">
        <h4 class="text-center">History Code Values</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-secondary text-white">
                <tr>
                    <th>Code</th>
                    <th>Value</th>
                    <th>Updated On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Value</td>
                        <td>@item.UpdatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center text-danger">No history records found.</p>
}
